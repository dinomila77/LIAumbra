@using LIAUmbraApp.Controllers
@inherits UmbracoViewPage<LIAUmbraApp.Models.ContactModel>
@*@model LIAUmbraApp.Models.ContactModel*@

    @using (Html.BeginUmbracoForm<ContactSurfaceController>("SubmitForm",FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Contact us</h4>
            <hr/>
            @Html.ValidationSummary(false, "", new {@class = "text-danger"})

            @if (TempData["Success"] != null)
            {
                <p>Email sent successfully! We'll be in touch soon.</p> 
            }
            else
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.FirstName, new {@class = "control-label col-md-2"})
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.FirstName)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.LastName, new {@class = "control-label col-md-2"})
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.LastName)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.EmailAddress, new {@class = "control-label col-md-2"})
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.EmailAddress)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Message, new {@class = "control-label col-md-2"})
                    <div class="col-md-10">
                        @Html.TextAreaFor(m => m.Message, new {rows = 3, cols = 45, placeholder = "Type your message here..."})
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Send email" class="btn btn-default"/>
                    </div>
                </div>
            }

        </div>

    }

