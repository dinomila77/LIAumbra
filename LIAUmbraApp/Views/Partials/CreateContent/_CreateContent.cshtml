@inherits UmbracoViewPage<LIAUmbraApp.Models.ContactViewModel>
    
@using (Html.BeginUmbracoForm("SubmitForm", "CreateContentSurface", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <h4>Send us your comments</h4>

        @Html.ValidationSummary(false, "", new {@class = "text-danger"})

        <div class="form-group">
            @Html.Label("First Name", new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.FirstName)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Last Name", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.LastName)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Message", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(m => m.Message, new {rows = 3, cols = 45, placeholder = "Type your message here..."})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Send" class="btn btn-default"/>
                <span>@TempData["success"]</span>
            </div>
        </div>

    </div>

}

