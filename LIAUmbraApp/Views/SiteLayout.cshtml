@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = null;
    var home = @CurrentPage.Site();
    string currentUrl = CurrentPage.Url;
    string englishUrl = "/en" + currentUrl.Substring(3);
    string swedishUrl = "/sv" + currentUrl.Substring(3);
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Umbraco Page</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/rte.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-3.1.1.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <nav id="Languages" class="nav navbar-nav">
                    <a href="@englishUrl">English</a>
                    <a href="@swedishUrl">Svenska</a>
                </nav>
                <a href="@home.Url" class="btn btn-link btn-lg">
                    <span class="glyphicon glyphicon-home"></span>
                </a>
            </div>  
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @{Html.RenderPartial("~/Views/Partials/Navigation/_TopNavigation.cshtml");}
                </ul>      
            </div>
        </div>
    </div>
<div class="container body-content">
    @RenderBody()
</div>
    <br />
    
    <nav class="navbar navbar-default navbar-fixed-bottom">
        <div class="container">
            <footer>
                <p>&copy; @DateTime.Now.Year - My Umbraco Page</p>
            </footer>
        </div>
    </nav>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>